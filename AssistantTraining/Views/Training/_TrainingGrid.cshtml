@using GridMvc.Html
@using GridMvc.Sorting
@model Grid.Mvc.Ajax.GridExtensions.AjaxGrid<AssistantTraining.Models.Training>


@(
    Html.Grid(Model).Named("TrainingGrid")
        .Columns(columns =>
        {
            columns.Add(f => f.TrainingName).Titled("Training Number");
            columns.Add(f => f.Instruction.Name).Titled("Instruction Number");
            columns.Add(f => f.Worker.LastName).Titled("Select");
        })
        .Filterable()
        .Sortable()
        .WithPaging(5))



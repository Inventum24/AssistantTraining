@{
    ViewBag.Title = "Home Page";
}
@section styles {
    @Styles.Render("~/Content/gridmvc")
}
<!-- Input Group -->

<form class="navbar-form" role="search" id="idInstructionForm" method="POST">
    <div class="input-group">
        
        <input type="text" class="typeahead form-control" autocomplete="off" placeholder="Instruction" spellcheck="false" name="srch-term-instruction" id="srchterminstruction">
        <div class="input-group-btn">
            <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
        </div>
    </div>
</form>
<form class="navbar-form" role="search" id="idTrainingForm" method="POST">
    <div class="input-group">
        <input type="text" class="typeahead form-control" autocomplete="off" placeholder="Training" spellcheck="false" name="srch-term-training" id="srchtermtraining">
        <div class="input-group-btn">
            <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
        </div>
    </div>
</form>
<div class="row" id="refGrid">
    @Html.Action("GetGrid")
</div>
<h3>Workers</h3>
<div class="row" id="refWorkerGrid">
    @Html.Action("GetWorkerGrid")
</div>
@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/gridmvc")
    @Scripts.Render("~/bundles/typeahead")

<link href="~/Content/bootstrap-datepicker3.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap-datepicker.min.js"></script>
<script src="~/Scripts/locales/bootstrap-datepicker.pl.min.js"></script>
    @Scripts.Render("~/bundles/application/Training")
}


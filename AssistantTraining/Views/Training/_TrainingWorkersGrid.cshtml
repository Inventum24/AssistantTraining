@using GridMvc.Html
@using GridMvc.Sorting
@model Grid.Mvc.Ajax.GridExtensions.AjaxGrid<AssistantTraining.ViewModel.TrainingWorkersGridData>


@(
    Html.Grid(Model).Named("TrainingWorkersGrid")
        .Columns(columns =>
        {
            columns.Add(f => f.WorkerLastName).Titled("Last Name").Sortable(true).Filterable(true).SetWidth(110);
            columns.Add(f => f.WorkerFirstMidName).Titled("First Name").Sortable(true).Filterable(true).SetWidth(110);
            //columns.Add(f => f.).Titled("Training Number").SetWidth(110);
            //columns.Add(f => f.Instruction.Number).Titled("Instruction Number").SetWidth(110);
        })
        .Sortable()
        .WithPaging(10))
